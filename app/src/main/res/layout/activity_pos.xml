<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/allbg"
    tools:context=".POS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.1"
            android:text="POINT OF SALE"
            android:textColor="@color/headcolor"
            android:background="@drawable/textview_background"
            android:textSize="35sp"
            android:textStyle="bold" />



    </LinearLayout>


    <EditText
        android:id="@+id/PosSEARCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Search"
        android:textAlignment="center"
        android:paddingLeft="6dp"
        android:drawableTint="#2B3784"
        android:drawableLeft="@drawable/icons8search_48"
        android:background="@drawable/home_btn_border"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/viewcart_border"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW CART -->"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginStart="60dp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImgAddtoCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_add_to_cart"
                android:backgroundTint="#ff4500" />


        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/PosListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
