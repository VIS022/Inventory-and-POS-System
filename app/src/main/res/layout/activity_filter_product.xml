<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterProduct"
    android:background="@drawable/allbg">

    <TextView
        android:id="@+id/txtCategoryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.2"
        android:text="FILTER PRODUCT"
        android:textColor="@color/headcolor"
        android:background="@drawable/textview_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="Sort By:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupSortOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioAscending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ascending"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textSize="24sp"
            android:scaleX="1.05"
            android:scaleY="1.05"

            />

        <RadioButton
            android:id="@+id/radioDescending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Descending"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textSize="24sp"
            android:scaleX="1.05"
            android:scaleY="1.05"/>

    </RadioGroup>


    <TextView
        android:id="@+id/txtSortIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="255dp"
        android:text="Sort In:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupSortCriteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textSize="24sp"
            android:scaleX="1.05"
            android:scaleY="1.05"            />

        <RadioButton
            android:id="@+id/radioPrice"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:scaleX="1.05"
            android:scaleY="1.05"
            android:text="Price"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textSize="24sp"
            android:scaleX="1.05"
            android:scaleY="1.05"
            android:textStyle="bold"
            android:text="Purchase"/>

        <RadioButton
            android:id="@+id/radioEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textSize="24sp"
            android:scaleX="1.05"
            android:scaleY="1.05"
            android:textStyle="bold"
            android:text="Total Earnings"/>

    </RadioGroup>


    <CheckBox
        android:id="@+id/cbLowStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="430dp"
        android:scaleX="1.05"
        android:scaleY="1.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCbLowStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="430dp"
        android:text="Low on stock only"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/cbLowStock"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextStock"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="435dp"
        android:hint="0"
        android:textAlignment="center"
        android:background="@drawable/cart_item_border"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toEndOf="@id/txtCbLowStock"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/txtCateBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="465dp"
        android:text="Categorize By:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spCateBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="510dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/white"
        android:dropDownVerticalOffset="35dp"
        android:dropDownWidth="match_parent"
        android:popupAnimationStyle="@style/spinnerDropDownItemStyle"/> <!-- Apply custom drop-down item style -->




    <Button
        android:id="@+id/btnBacktoInv"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="585dp"
        android:background="@drawable/home_btn_border"
        android:text="Go back to inventory"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/btnBacktoHome"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/home_btn_border"
        android:paddingLeft="6dp"
        android:text="Home"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:drawableLeft="@drawable/icons8_home48"
        android:drawableTint="#2B3784"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>