<!-- category_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item android:left="15dp" android:right="15dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F7F8" /> <!-- Background color -->
            <stroke
                android:width="4dp"
                android:color="@color/black" />
            <corners android:radius="6dp" />

        </shape>

    </item>
</layer-list>
