<!-- category_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" /> <!-- Background color -->
            <stroke
                android:width="4dp"
                android:color="@color/white" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
