<?xml version="1.0" encoding="utf-8"?>
    <!-- border_with_background.xml -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Border layer -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
                <stroke
                    android:width="10dp"
                    android:color="#2B3784" /> <!-- Border color -->
                <corners android:radius="6dp" /> <!-- Rounded corners -->
            </shape>
        </item>
        <!-- Background layer -->
        <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="#F5F7F8" /> <!-- Background color -->
                <corners android:radius="4dp" /> <!-- Rounded corners -->
            </shape>
        </item>
    </layer-list>
